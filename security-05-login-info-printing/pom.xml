    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <compilerArgs>--enable-preview</compilerArgs>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <!--
            作用：告诉Maven将src/main/java目录下的所有.xml文件也当作资源文件处理。
            为什么需要这个配置：
            默认情况下，Maven只把src/main/resources目录下的文件当作资源
            但在实际项目中，经常会把MyBatis的Mapper XML文件、Spring的配置XML等放在Java包目录下
            没有这个配置，这些XML文件会被忽略，不会被打包到最终的jar/war中
            -->
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <!--
                作用：这是标准的资源目录配置，包含src/main/resources下的所有文件。
            -->
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include> <!-- 如果resources下所有都需要，那么这行可以省略掉 -->
                    <!-- 可以用通配符指定需要的后缀文件 -->
                </includes>
            </resource>
        </resources>
    </build>

</project>
